@model CreateModel

<div class="bg-primary m-1 p-1 text-white"><h4>Account erstellen</h4></div>
<div asp-validation-summary=" All" class="text-danger"></div>
<form asp-action="Create" methode="post">
    <div class="form-group">
        <label class="form-control-label" asp-for="Name"></label>
        <input class="form-control text-danger" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="form-control-label" asp-for="Email"></label>
        <input class="form-control text-danger" asp-for="Email" />
    </div>
    <div class="form-group">
        <label class="form-control-label" asp-for="Password">Passwort</label>
        <input class="form-control text-danger" asp-for="Password" />
    </div>
    <button type="submit" class="btn btn-primary">Erstellen</button>
    <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
</form>
