@model Contract

    <h3 class="p-2 bg-primary text-white text-center">Eingabemaske - Vertrag</h3>

    <form asp-action="UpdateContract" method="post">
        @*Originalwert übertragen zum Aktualisierungsabgleich*@
        <input name="original.ContractId" value="@Model?.ContractId" type="hidden" />
        <input name="original.CustomerId" value="@Model?.CustomerId" type="hidden" />
        <input name="original.Startdate" value="@Model?.Startdate" type="hidden" />
        <input name="original.Enddate" value="@Model?.Enddate" type="hidden" />
        <input name="original.PurchasePrice" value="@Model?.PurchasePrice" type="hidden" />
        <input name="original.RetailPrice" value="@Model?.RetailPrice" type="hidden" />
        <input name="original.Services" value="@Model?.Services" type="hidden" />
        <input name="original.SoftDeleted" value="@Model?.SoftDeleted" type="hidden" />

        <input name="original.SoftDeleted" value="@Model?.SoftDeleted" type="hidden" />

        <input type="hidden" asp-for="ContractId" />
        <label class="form-control-label" asp-for="CustomerId">Firma</label>
        <div class="form-group">
            <div>
                <select name="CustomerId">
                    @foreach (var CustomerItem in ViewData["CustomerItems"] as List<KeyValuePair<long, string>>)
                    {
                        if (CustomerItem.Key == Model.CustomerId)
                        {
                            <option selected value="@CustomerItem.Key">@CustomerItem.Value</option>
                        }
                        else
                        {
                            <option value="@CustomerItem.Key">@CustomerItem.Value</option>
                        }
                    }
                </select>
            </div>

            <table class="table table-sm table-borderless">
                <tr>
                    <td><label class="form-control-label" asp-for="Startdate">Startdatum</label></td>
                    <td><input class="form-control" asp-for="StrStartdate" value="@Model.StrStartdate" /></td>
                    <td>@Html.ValidationMessage("StrStartdate", "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td><label class="form-control-label" asp-for="Enddate">Enddatum</label></td>
                    <td><input class="form-control" asp-for="StrEnddate" value="@Model.StrEnddate" /></td>
                    <td>@Html.ValidationMessage("StrEnddate", "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td><label class="form-control-label" asp-for="PurchasePrice">Einkaufspreis</label></td>
                    <td><input class="form-control" asp-for="StrPurchasePrice" value="@Model.PurchasePrice" /></td>
                    <td>@Html.ValidationMessage("StrPurchasePrice", "", new { @class = "text-danger" })</td>
                </tr>
                <tr>
                    <td><label class="form-control-label" asp-for="RetailPrice">Verkaufspreis</label></td>
                    <td><input class="form-control" asp-for="StrRetailPrice" value="@Model.RetailPrice" /></td>
                    <td>@Html.ValidationMessage("StrRetailPrice", "", new { @class = "text-danger" })</td>
                </tr>
            </table>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Speichern</button>
            <a class="btn btn-secondary" asp-action="Index">Abbrechen</a>
        </div>
    </form>






